<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_merchant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:id="@+id/photo_merchant"
            android:background="@drawable/dummy_image"/>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/photo_merchant"
            android:background="#47bd78"
            android:layout_alignParentRight="true"
            android:id="@+id/relativeLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="18dp"
                android:id="@+id/tulisandiskon_tv"
                android:layout_centerHorizontal="true"
                android:text="Discount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30%"
                android:layout_below="@+id/tulisandiskon_tv"
                android:textSize="40dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/discount_mercant"/>

        </RelativeLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_merchant"
            android:textColor="#000000"
            android:text="Merchant Name"
            android:id="@+id/name_merchant"
            android:textSize="23dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:textStyle="bold"
            android:singleLine="true"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_merchant"
            android:text="Merchant Street No. 13"
            android:id="@+id/address_merchant"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_merchant"
            android:text="5.0"
            android:id="@+id/startext_merchant"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:singleLine="true"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_merchant"
            android:layout_toRightOf="@+id/startext_merchant"
            android:layout_marginLeft="5dp"
            android:numStars="5"
            android:layout_marginTop="3dp"
            android:rating="3.5"
            android:isIndicator="false"
            style="@style/foodRatingBar"
            android:id="@+id/ratingBar_mercant" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/location_icon"
            android:background="@drawable/location_icon"
            android:layout_below="@+id/address_merchant"
            android:layout_toRightOf="@+id/ratingBar_mercant"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_merchant"
            android:text="12 km Near"
            android:id="@+id/locationtext_merchant"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/location_icon"
            android:layout_marginLeft="2dp"
            android:singleLine="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
