<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/scrollView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:paddingBottom="16dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/logomenu"
                        android:layout_width="wrap_content"
                        android:background="@drawable/ic_octo_logo_red"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="-20dp"
                        android:layout_marginTop="-20dp"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical|center|center_horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageButton
                        android:id="@+id/promo"
                        android:background="@drawable/merchant_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center">
                    </ImageButton>

                    <TextView
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="MERCHANT"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/scanner"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageButton
                        android:id="@+id/sale"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/purchase_icon"
                        android:layout_alignParentTop="true"/>

                    <TextView
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="PURCHASE"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal|center_vertical|center"
                android:layout_weight="1"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageButton
                        android:id="@+id/redeem"
                        android:background="@drawable/redeem_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center">
                    </ImageButton>

                    <TextView
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="REDEEM"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/scanner"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageButton
                        android:id="@+id/history"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/history_icon"
                        android:layout_alignParentTop="true"/>

                    <TextView
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="HISTORY"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/redeem"/>

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </ScrollView>

</RelativeLayout>

